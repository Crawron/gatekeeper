    "cpy-cli": "3.1.1",
    "discord.js": "^13.1.0",
    "esbuild": "0.12.25",
    "esbuild-jest": "0.5.0",
    "release-it": "14.11.5",
    "trash-cli": "4.0.0",
    "typescript": "4.4.2"
  },
  "publishConfig": {
    "access": "public"
